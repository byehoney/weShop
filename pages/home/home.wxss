/* pages/home/home.wxss */
.swiper{
  width: 100%;
  height: 400rpx;
}
.swiper .swiper-item,.swiper .swiper-item image{
  width: 100%;
}
.tab-box{
    overflow: hidden;
    width: 100%;
    border-bottom: 2rpx solid #e9e9e9;
    background-color:#fff; 
}
.tab-item{
    width: 25%;
    float: left;
    text-align: center;
    font-size: 28rpx;
    height: 80rpx;
    line-height: 80rpx;
    position: relative;
    padding-top: 20rpx;
}
.tab-item .tab-num{
    position: absolute;
    top:10rpx;
    right:10rpx;
    background-color: #e4393c;
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
    border-radius: 50%;
    color:#fff;
    font-size: 24rpx;
}